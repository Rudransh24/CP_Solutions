#include<bits/stdc++.h>
using namespace std;
#define M 1000000007
typedef long long int ll;

int main(void)
{
    int t;
    cin>>t;
    while(t--)
    {
        ll n;
        cin>>n;
        ll ar[n];
        for(ll i=0;i<n;i++)
        cin>>ar[i];
        ll *p=min_element(ar,ar+n);
        cout<<(*p)*(n-1)<<endl;
        
        
    }
    
    return 0;
}

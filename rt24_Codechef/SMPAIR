#include<bits/stdc++.h>
using namespace std;
#define M 1000000007

int main(void)
{
    int t;
    cin>>t;
    while(t--)
    {
        int n;
        cin>>n;
        int ar[1000001];
        for(int i=0;i<n;i++)
        {
            cin>>ar[i];
        }
        sort(ar,ar+n);
        cout<<ar[0]+ar[1]<<endl;
    }    
    
    return 0;
}

#include<bits/stdc++.h>
using namespace std;
#define M 1000000007

int main(void)
{
    int t;
    cin>>t;
    while(t--)
    {
        int n;
        cin>>n;
        int count1=0,count0=0;
        for(int i=0;i<n;i++)
        {
            int x;
            cin>>x;
            if(x==0)
            count0++;
            else
            count1++;
            
        }
        if(count1%2==1)
        cout<<count1<<endl;
        else
        cout<<count0<<endl;
        
        
    }
    return 0;
    
}

#include<stdio.h>

int main()
{
        int t;scanf("%d",&t);
        unsigned long n;
        for(int i=0;i<t;i++)
        {
            scanf("%lu",&n);
            if(n>=2 && n%2==0)
            printf("%lu",((n/2)+1));
            else
            if(n>=2 && n%2!=0)
            printf("%lu",(n/2+1));
            
            printf("\n");
            
                
        }
        return 0;
}

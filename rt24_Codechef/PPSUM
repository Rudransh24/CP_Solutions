#include<bits/stdc++.h>
using namespace std;
#define M 1000000007

int main(void)
{
    int t;
    cin>>t;
    while(t--)
    {
        int n,d;
        cin>>d>>n;
        int sum=0;
        for(int i=0;i<d;i++)
        {
            
            sum=n*(n+1)/2;
            n=sum;
        }
        
        cout<<sum<<endl;
    }
    return 0;
    
}
